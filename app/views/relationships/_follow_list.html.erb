<% if users.exists? %>
  <% users.each do |user| %>
    <table>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
          <th colspan="3"></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th><%= image_tag user.get_profile_image(30,30) %></th>
          <th><%= user.name %></th>
          <th>フォロー数: <%= user.followings.count %></th>
          <th>フォロワー数: <%= user.followers.count %></th>
          <th><%= link_to 'Show', user %></th>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>