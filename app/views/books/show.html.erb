<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info' %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to user_path(@user) do %>
            <%= image_tag @user.get_profile_image(100,100) %><br>
            <%= @user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
            <% end %>
          </td>
          <td>
            <%= render "favorites/favorite-btn", book: @book %>
          </td>
          <td>
            <p>コメント件数：<%= @book.book_comments.count %></p>
          </td>
        </tr>
        <tr>
          <td>
            <% @book.book_comments.each do |book_comment| %>
              <p>
                <%= image_tag book_comment.user.get_profile_image(50,50) %>
              </p>
              <%= book_comment.user.name %>
              <%= book_comment.comment %>
              <% if book_comment.user == current_user %>
                <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
              <% end %>
            <% end %>

            <%= form_with model: [@book, @book_comment] do |f| %>

              <%= render 'layouts/errors', obj: f.object %>

              <%= f.text_area :comment, rows: '5',cols: '40' %>
              <%= f.submit "送信" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
